#!/bin/bash
# NN-Analytics Daemon
# chkconfig: 345 20 80
# description: The service script for running NN-Analytics.
# processname: nn-analytics

DAEMON_PATH="/usr/local/nn-analytics/bin"

DAEMON=nn_loader
DAEMONOPTS=""

NAME=nn-analytics
DESC="Provide insight for data governance."
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
        if [ $(/usr/bin/id -u) -eq 0 ]; then
            printf "%-50s" "Starting $NAME..."
            PID=`su hdfs -c $DAEMON_PATH/$DAEMON`
            echo "Saving PID" $PID " to " $PIDFILE
            if [ -z $PID ]; then
                printf "%s\n" "Failed to write PID."
            else
                echo $PID > $PIDFILE
                printf "%s\n" "Started."
            fi
        else
         echo "Run as root."
         exit 1
        fi
;;
status)
        printf "%-50s" "Checking $NAME..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but PID file exists."
            else
                printf "%s\n" "Running."
            fi
        else
            printf "%s\n" "Service not running."
        fi
;;
stop)
        if [ $(/usr/bin/id -u) -eq 0 ]; then
            printf "%-50s" "Stopping $NAME..."
                PID=`cat $PIDFILE`
                cd $DAEMON_PATH
            if [ -f $PIDFILE ]; then
                kill $PID
                printf "%s\n" "Stopped."
                rm -f $PIDFILE
            else
                printf "%s\n" "PID file not found."
            fi
        else
         echo "Run as root."
         exit 1
        fi
;;

restart)
        $0 stop
        echo "Sleeping for 60 seconds..."
        sleep 60
        $0 start
;;

*)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac